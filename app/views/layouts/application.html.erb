<!DOCTYPE html>
<html>
  <head>
    <title>Resumaid</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div id= "sidebar">
          <div id= "logo">
              <%= link_to root_path do %>
                <% image_tag "maid.png", {:id => "logo_img"}%>
              <% end %>
          </div>
          <ul>
              <li class= "category">Resumaid</li>
              <li> <%=link_to "Submissions", root_path %> </li>
              <li><%= link_to "About", about_path %></li>
          </ul>
          <ul>
              <li class= "category">My Documents</li>
              <li> <%=link_to "Resume", resume_path %> </li>
              <li><%= link_to "Cover Letter", cover_letters_path %></li>
          </ul>
          <ul>
              <li class= "category">Social</li>
              <li> <a href="http://twitter.com/jess_richardson">Twitter</a></li>
              <li> <a href="http://github.com/jesskrich">Github</a></li>
              <li> <a href="http://linkedin.com/in/richardsonjessie">Linkedin</a></li>
          </ul>
          <p class= "sign_in">Admin Login</p>
      </div>
      <div id="main_content">
          <div id="header">
              <% if current_page?(root_path) %>
				<p>All Job Application Submissions</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
            <% elsif current_page?(resume_path) %>
				<p>Resume</p>
            <% elsif current_page?(cover_letters_path) %>
				<p>Cover Letter</p>
			<% else %>
				<%= link_to "Back to All Submissions", root_path %>
			<% end %>
              <div class="buttons">
                  <button class= "button"><%= link_to "New Submission", new_post_path %> </button>
                  <button class="button">Log Out</button>
              </div>
          </div>
          <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: "alert") %>
          <% end %>
          <%= yield %>
      </div>
    <!-- <%= yield %> -->
  </body>
</html>
